{
  "compilerOptions": {
    "pretty": true,
    "sourceMap": true,
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "isolatedModules": true,
    "importsNotUsedAsValues": "remove",
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": "./src",
    "removeComments": true,
    "skipLibCheck": true,
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@routes/*": [
        "./src/routes/*"
      ],
    },
  },
  "include": [
    "src/**/*",
    "**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}